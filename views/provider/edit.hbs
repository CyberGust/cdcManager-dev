<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Cadastro de Cliente</div>
        <div class="card-body">
            <form method="POST" action="/provider/edit">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input type="text" name="name" class="form-control" required="required"
                                    value="{{providers.name}}" autofocus="autofocus" autocomplete="off">
                                <label for="name">Nome</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input type="text" name="phone" class="form-control" value="{{providers.phone}}"
                                    autocomplete="off">
                                <label for="phone">Telefone</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input type="address" name="address" class="form-control" value="{{providers.address}}"
                                    autocomplete="off">
                                <label for="address">Endere√ßo</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input type="text" name="document" class="form-control" value="{{providers.document}}">
                                <label for="document">Documento</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <input type="hidden" value="{{providers._id}}" name="id" id="id">
                        <button type="submit" class="ml-3 btn btn-primary btn-md">Salvar</button>
                        <a href="/provider" class="ml-3 btn btn-danger btn-md">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>