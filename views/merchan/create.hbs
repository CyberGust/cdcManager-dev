<div class="container">
<div class="card card-register mx-auto mt-5">
    <div class="card-header">Registro de <b>MERCADORIA</b></div>
    <div class="card-body">
    <form method="POST" action="/merchandise/create">
        <div class="form-group">
            <div class="col-md-6">
            <div class="form-label-group mb-3">
                <select class="form-control" name="category">
                    <option value="">Selecione uma categoria</option>
                    {{#each categories}}
                    <option value="{{name}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            </div>
        
        <div class="form-group">
            <div class="col-md-6">
            <div class="form-label-group mb-3">
                <select class="form-control" name="subcategory">
                    <option value="">Selecione uma subcategoria</option>
                    {{#each subcategories}}
                    <option value="{{name}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            </div>

            <div class="form-label-group col-md-4 mb-3">
                <input type="number" name="id" class="form-control" required="required">
                <label for="id">ID</label>
            </div>
            <div class="form-label-group">
                <input type="text" name="details" class="form-control" required="required">
                <label for="details">Descrição</label>
            </div>        
        </div>
        <div class="row">
            <button type="submit" class="ml-3 btn btn-primary btn-md">Salvar</button>
            <a href="/merchandise" class="ml-3 btn btn-danger btn-md">Cancelar</a>
        </div>
    </form>
    </div>
</div>
</div>
