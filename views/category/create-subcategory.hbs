<div class="container">
<div class="card card-register mx-auto mt-5">
    <div class="card-header">Registro de <b>SUBCATEGORIA</b></div>
    <div class="card-body">
    <form method="POST" action="/category/create-subcategory">
        <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
            <div class="form-label-group">
                <input type="text" name="name" class="form-control" required="required" autofocus="autofocus">
                <label for="name">Título da Subcategoria</label>
            </div>
            </div>
        </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-6">
            <div class="form-label-group mb-3">
                <select class="form-control" name="category">
                    <option value="">Selecione uma categoria</option>
                    {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            </div>
        
            <div class="form-label-group">
                <input type="text" name="description" class="form-control" required="required">
                <label for="description">Descrição</label>
            </div>
        
        </div>
        <div class="row">
            <button type="submit" class="ml-3 btn btn-primary btn-md">Salvar</button>
            <a href="/category" class="ml-3 btn btn-danger btn-md">Cancelar</a>
        </div>
    </form>
    </div>
</div>
</div>
