<body id="page-top">
    {{>_navbar}}
  <div id="wrapper">
    {{>_sidebar}}
    <div id="content-wrapper">
      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/merchandise/create">Novo Produto</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/merchandise/sell">Vendidos</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/merchandise/rent">Alocados</a>
          </li>
          <li class="breadcrumb-item active">Disponíveis</li>
        </ol>

    <!-- Page Content -->

        <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-table"></i>
            Mercadorias Disponíveis</div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Código</th>
                    <th>Preço</th>
                    <th>Custo</th>
                    <th></th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                  <tr>
                    <th>Código</th>
                    <th>Preço</th>
                    <th>Custo</th>
                    <th></th>
                  </tr>
                </tfoot>
                <tbody>
                  {{#each merchandise}}
                  <tr>
                    <td>{{code}}</td>
                    <td>R${{sellPrice}}</td>
                    <td>R${{buyPrice}}</td>
                    <td>
                      <div class="form-row ml-3">
                        <form action="/merchandise/delete" method="POST">
                          <input type="hidden" name="category" value="{{category}}">
                          <input type="hidden" name="id" value="{{_id}}">
                          <button onclick="deleteCheck()" type="submit" class="mr-1 btn btn-danger btn-sm"><i class="fas fa-user-times"></i></button>
                        </form>
                        <a href="/merchandise/edit/{{_id}}" class="ml-1 btn btn-dark btn-sm"><i class="fas fa-edit"></i></td></a>
                      </div>
                  </tr>
                </tbody>
                {{/each}}
              </table>
            </div>
          </div>



      </div>
    <!-- /.container-fluid -->

    {{>_footer}}
    <!-- /.content-wrapper -->
  </div>
  <!-- /#wrapper -->
  {{>_logout}}
  {{>_scrolltop}}
  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
  <!-- Custom scripts for all pages-->
  <script src="js/sb-admin.min.js"></script>
  <script src="js/demo/datatables-demo.js"></script>
</body>
</html>
