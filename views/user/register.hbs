<div class="container">
<div class="card card-register mx-auto mt-5">
    <div class="card-header">Registro de Usuário</div>
    <div class="card-body">
    <form method="POST" action="/user/register">
        <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
            <div class="form-label-group">
                <input type="text" name="username" class="form-control" required="required" autofocus="autofocus">
                <label for="username">Nome de usuário</label>
            </div>
            </div>
            <div class="col-md-6">
            <div class="form-label-group">
                <input type="text" name="phone" class="form-control" required="required">
                <label for="phone">Telefone</label>
            </div>
            </div>
        </div>
        </div>
        <div class="form-group">
        <div class="form-label-group">
            <input type="email" name="email" class="form-control" required="required">
            <label for="email">Email</label>
        </div>
        </div>
        <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
            <div class="form-label-group">
                <input type="password" name="password" class="form-control" required="required">
                <label for="password">Senha</label>
            </div>
            </div>
            <div class="col-md-6">
            <div class="form-label-group">
                <input type="password" name="pwdConfirm" class="form-control" required="required">
                <label for="pwdConfirm">Confirme sua senha</label>
            </div>
            </div>
        </div>
        </div>
        <button type="submit" class="btn btn-primary btn-md">Register</button>
    </form>
    <div class="text-center">
        <a class="d-block small mt-3" href="/user/login">Página de Login</a>
        <a class="d-block small" href="/user/whoami">Esqueceu sua senha?</a>
    </div>
    </div>
</div>
</div>
